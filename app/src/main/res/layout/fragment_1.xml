<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:theme="@style/Theme.AppCompat.Light.NoActionBar"
    tools:context="com.chagay.gettexid.controller.MainActivityNavigation">


    <!-- TODO: Update blank fragment layout -->
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/layout_bg_rounded">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


        <EditText
            android:id="@+id/filterDestination"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Filter by destination"
            android:layout_marginRight="10dp"
             />



        </LinearLayout>
    </android.support.v7.widget.Toolbar>




        <ListView
            android:id="@+id/listViewTravels"
            android:layout_width="fill_parent"
            android:layout_height="370dp"/>




<LinearLayout
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/layout_bg_rounded_"
    android:orientation="vertical">
        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textStyle="bold"
            android:text="Travel Information:" />
<LinearLayout
    android:layout_width="fill_parent"
    android:layout_height="20dp"
    android:orientation="horizontal">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:text=" Customer name: "
        />

    <TextView
        android:id="@+id/customer_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
      />
</LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="20dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text=" Initial address: "/>

        <TextView
            android:id="@+id/initial_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
           />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="20dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text=" Destination : "/>

        <TextView
            android:id="@+id/destination"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
           />
    </LinearLayout>






<LinearLayout
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_gravity="bottom"
    android:gravity="center_horizontal|bottom"
    android:layout_marginBottom="5dp"
    android:orientation="horizontal">



        <Button
            android:id="@+id/callButtom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/layout_button_color_rounded"
            android:textColor="@color/blue_"
            android:text="call" />

    <Button
        android:id="@+id/smsButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/layout_button_color_rounded"
        android:textColor="@color/blue_"
        android:text="sms" />



        <Button
            android:id="@+id/mailButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/layout_button_color_rounded"
            android:textColor="@color/blue_"
            android:text="mail" />

    <Button
        android:id="@+id/startDriveButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/layout_button_color_rounded"
        android:textColor="@color/blue_"
        android:text="Take" />

    <Button
        android:id="@+id/finishTravel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/layout_button_color_rounded"
        android:textColor="@color/blue_"
        android:text="Finish" />




</LinearLayout>


</LinearLayout>

    </LinearLayout>








